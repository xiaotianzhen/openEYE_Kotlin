<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/margin_padding_15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        android:id="@+id/im_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="160dp"
        android:layout_height="80dp"
        />


    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_padding_15dp"
        android:textColor="@color/font_black"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        app:layout_constraintStart_toEndOf="@id/im_cover"
        app:layout_constraintTop_toTopOf="@id/im_cover"
        android:layout_width="0dp"
        android:id="@+id/tv_title"
        android:textSize="@dimen/font_size_14sp"
        android:text="好的父母应该是怎样的呢"
        android:lines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/font_losecoupon"
        app:layout_constraintEnd_toStartOf="@id/im_share"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        app:layout_constraintStart_toEndOf="@id/im_cover"
        app:layout_constraintBottom_toBottomOf="@id/im_cover"
        android:layout_width="0dp"
        android:id="@+id/tv_desc"
        android:textSize="@dimen/font_size_12sp"
        android:text="#记录/开眼精选"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>

    <ImageView
        android:background="@mipmap/common_share"
        app:layout_constraintBottom_toBottomOf="@id/tv_desc"
        android:layout_marginEnd="@dimen/margin_padding_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/im_share"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>